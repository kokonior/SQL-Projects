<!DOCTYPE html>
<html>
    <head>
        <title>Reservations</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous">
    </head>

    <body>
<div>
    <% if (role==="Owner"){%>
        <div>
            <% include ../partials/owner_nav.ejs%>
        </div>
        <%}else if(role==="Broker"){%>
            <div>
                <% include ../partials/broker_nav.ejs%>
            </div>
            <%}else if(role==="Customer"){%>
                <div>
                    <%include ../partials/customer_nav.ejs%>
                </div>
                <%}%>
</div>
<div style="margin-top:55px">
    <h2>Reservation Requests</h2>
        <div class="list-group">
            <% for(var i=0; i<reservations.length ;i++){ %>
                <a class="list-group-item list-group-item-action list-group-item-dark">
                    <div id="<%=reservations[i].ID%>">
                        <h3>Reservation</h3>
                        <div>
                            <p><%=reservations[i].RoomNumber%></p>
                            <p><%=reservations[i].HotelBranch%></p>
                            <p><%=reservations[i].CustomerUser%></p>
                        </div>
                        <div class="btn-group" role="group" aria-label="Basic example">
                        <form   method="post" name="Approve" action="/owner/<%=reservations[i].HotelName%>/<%=reservations[i].HotelBranch%>/reservationRequests/<%=reservations[i].ID%>/accept">
                            <button type="submit" type="button" class="btn btn-success">Approve</button>
                        </form>
                        <form method="post" name="Deny" action="/owner/<%=reservations[i].HotelName%>/<%=reservations[i].HotelBranch%>/reservationRequests/<%=reservations[i].ID%>/deny">
                            <button type="submit" type="button" class="btn btn-danger">Deny</button>
                        </form>
                        </div>
                    </div>
                </a>
            <%}%>
            </div>
    </div>
    </body>
</html>