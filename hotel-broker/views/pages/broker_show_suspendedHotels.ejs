<!DOCTYPE html>
<html>
<head>
    <title>All Hotels</title>
    <meta charset="UTF-8" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
<div>
    <% if (role==="Owner"){%>
        <div>
            <% include ../partials/owner_nav.ejs%>
        </div>
        <%}else if(role==="Broker"){%>
            <div>
                <% include ../partials/broker_nav.ejs%>
            </div>
            <%}else if(role==="Customer"){%>
                <div>
                    <%include ../partials/customer_nav.ejs%>
                </div>
                <%}%>
</div>
<div style="margin-top: 55px;">
    <h2 style="margin-left:10px">Show Suspended Hotels</h2>
    <ul class="list-group" style="width: 98%">
        <% for(var i=0; i<hotels.length ; i++){%>
        <li class="list-group-item">
            <div class="card text-white bg-dark m-2 col-sm-6" style="max-width: 99%;">
                <div class="card-header">
                    <h3>
                        <%=hotels[i].Name%>
                    </h3>
                </div>
                <div class="card-body">
                <h5 class="card-title">Hotel Branch: <%=hotels[i].Branch%></h5>
                <p class="card-text">Hotel Location: <%=hotels[i].Location%></p>
                <p class="card-text">Hotel Owner: <%=hotels[i].OwnerUser%></p>
                <form method="post" action="/broker/unsuspendHotel/<%=hotels[i].Name%>/<%=hotels[i].Branch%>">
                    <button type="submit" class="btn btn-primary" style="width:100px">Activate</button>
                </form>
            </div>
        </li>
        <%}%>
    </ul>
</div>
</body>
</html>
