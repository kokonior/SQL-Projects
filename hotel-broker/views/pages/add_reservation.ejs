<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div>
      <% if (role==="Owner"){%>
      <div><% include ../partials/owner_nav.ejs%></div>
      <%}else if(role==="Broker"){%>
      <div><% include ../partials/broker_nav.ejs%></div>
      <%}else if(role==="Customer"){%>
      <div><%include ../partials/customer_nav.ejs%></div>
      <%}%>
    </div>
    <div style="margin-top:55px">
      <h2>New Reservation</h2>
      <form
        method="post"
        action="/reservations/<%=hotelName%>/<%=hotelBranch%>"
        name="new_reservation"
        class="form-group"
        style="margin:5%"
      >
        <div class="input-group mb-3">
          <label for="StartDate" class="col-sm-2 col-form-label">Start Date</label>
          <input
            type="date"
            name="startDate"
            class="form-control"
            placeholder="StartDate"
            aria-label="StartDate"
            aria-describedby="basic-addon1"
            id="StartDate"
            required
          />
        </div>
        <div class="input-group mb-3">
          <label for="EndDate" class="col-sm-2 col-form-label">End Date</label>
          <input
            type="date"
            class="form-control"
            name="endDate"
            placeholder="EndDate"
            aria-label="EndDate"
            aria-describedby="basic-addon3"
            id="EndDate"
            required
          />
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="inlineRadioOptions"
            id="single"
            value="Single"
            onclick="javascript:getValue();"
            checked
          />
          <label class="form-check-label" for="inlineRadio1">Single</label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="inlineRadioOptions"
            id="double"
            value="Double"
            onclick="javascript:getValue();"
          />
          <label class="form-check-label" for="inlineRadio2">Double</label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="inlineRadioOptions"
            id="triple"
            value="Triple"
            onclick="javascript:getValue();"
          />
          <label class="form-check-label" for="inlineRadio3">Triple</label>
        </div>
        <div class="form-group row" hidden>
          <label for="roomNumber" class="col-sm-2 col-form-label"
            >Room Type:
          </label>
          <div class="col-sm-10">
            <input
              type="text"
              name="roomType"
              class="form-control"
              id="roomType"
              value="Single"
              readonly
            />
          </div>
        </div>
        <div style="margin-top:5px">
          <button type="submit" class="btn btn-dark mb-2">Submit</button>
        </div>
      </form>
    </div>
  </body>
  <script>
    function getValue() {
      if (document.getElementById("single").checked) {
        document.getElementById("roomType").value = "Single";
      }
      if (document.getElementById("double").checked) {
        document.getElementById("roomType").value = "Double";
      }
      if (document.getElementById("triple").checked) {
        document.getElementById("roomType").value = "Triple";
      }
    }
  </script>
</html>
